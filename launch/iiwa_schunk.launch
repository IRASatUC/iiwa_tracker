<?xml version="1.0"?>

<launch>
    <arg name="tool_name" default="Schunk"/>

    <param name="/iiwa/publishJointStates" type="boolean" value="true" /> <!--publish joint states (avoid joint_state_controller)-->
    <param name="/iiwa/toolName" type="string" value="$(arg tool_name)" /> <!--Sunrise tool-->

    <param name="robot_description" command="$(find xacro)/xacro.py $(find iiwa_tracker)/urdf/iiwa_schunk.urdf.xacro" />

    <node ns="iiwa" name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen" />

    <!-- <node ns="iiwa" name="$(anon rviz)" pkg="rviz" type="rviz" respawn="true" args="-d $(find iiwa_tracker)/launch/iiwa_schunk.rviz" output="screen" /> -->

</launch>
