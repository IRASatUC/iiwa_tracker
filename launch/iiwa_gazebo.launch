    <node name="addtional_tf_broadcaster" pkg="iiwa_tracker" type="tf_broadcast.py"/>

    <param name="/iiwa/toolName" type="string" value="$(arg tool_name)" />
    <param name="/iiwa/endpointFrame" type="string" value="$(arg endpoint_frame)" />
</launch>
